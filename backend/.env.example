# backend/.env.example

# ==================
# LLM API keys  
# ==================

# OpenRouter (sostituisce Azure OpenAI)
OPENROUTER_API_KEY=<your-openrouter-api-key>
OPENROUTER_MODEL=openai/gpt-4o-mini

# Azure OpenAI (commentato - usa OpenRouter invece)
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_ENDPOINT=...
# AZURE_OPENAI_DEPLOYMENT_NAME=...
# AZURE_OPENAI_API_VERSION=...

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# ============================================
# MCP Configuration (opzionale - default: remote)
# ============================================
MCP_MODE=remote  # o "local"
MCP_REMOTE_HOST=localhost
MCP_REMOTE_PORT=8001

# ============================================
# LLM Configuration (opzionale)
# ============================================
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000

# ============================================
# Playwright Configuration
# ============================================
PLAYWRIGHT_HEADLESS=False
PLAYWRIGHT_TIMEOUT=30000

# ============================================
# AMC Configuration 
# ============================================
AMC_USERNAME=<your-amc-username>
AMC_PASSWORD=<your-amc-password>

# ============================================
# LangSmith Tracing
# ============================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=<your-langchain-api-key>
LANGCHAIN_PROJECT=My First App